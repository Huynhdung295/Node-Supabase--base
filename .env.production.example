# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Supabase Configuration (Production)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# JWT Configuration (MUST be different from development)
JWT_SECRET=generate-a-strong-random-secret-min-32-characters
JWT_EXPIRES_IN=7d

# Database Configuration (for direct connection if needed)
DATABASE_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# CORS Configuration (Your frontend domain)
CORS_ORIGIN=https://your-production-frontend.com

# Rate Limiting (Stricter in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Audit Logs Retention
AUDIT_LOGS_RETENTION_DAYS=90

# Email Service (Optional - configure if using)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@your-domain.com

# Frontend URL (for email links)
FRONTEND_URL=https://your-production-frontend.com

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# AWS (Optional - if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
