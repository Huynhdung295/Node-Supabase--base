# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Supabase Configuration (Local Development)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Configuration (Generate with: npm run keys:generate)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption & Security Keys
ENCRYPTION_KEY=your-encryption-key-32-chars-min
API_KEY_SECRET=your-api-key-secret
COOKIE_SECRET=your-cookie-secret

# Database Configuration (for direct connection if needed)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
COOKIE_DOMAIN=localhost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Audit Logs
AUDIT_LOGS_RETENTION_DAYS=90

# Memory Monitoring
MEMORY_CHECK_INTERVAL=60000
MEMORY_THRESHOLD=0.9

# Email Configuration (Resend)
# Get your API key from: https://resend.com/api-keys (FREE: 3000 emails/month)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@yourdomain.com
# Note: Resend requires verified domain or use onboarding@resend.dev for testing
